<%- include('partials/head') %>
  <body class="bg-gray-100">
    <%- include('partials/header') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-screen-lg">
      <h2 class="text-5xl text-gray-800 font-bold text-center mb-6">Here are our registered Homes:</h2>
      <ul class="space-y-8">
        <% registerHomes.forEach(home => { %>
          <li class="max-w-sm rounded overflow-hidden shadow-lg bg-white hover:bg-gray-50 transition duration-300">
            <!-- Home Image -->
            <img src="<%= home.imageURL %>" alt="<%= home.houseName %>" class="w-full object-cover h-48">

            <!-- Home Details -->
            <div class="px-6 py-4">
              <div class="font-bold text-xl text-gray-700 mb-2"><%= home.houseName %></div>
              <p class="text-gray-600 text-base mb-2"><i class="fas fa-map-marker-alt"></i> <%= home.location %></p>
              <p class="text-gray-600 text-base mb-2">Rating: <%= home.rating %> <i class="fas fa-star text-yellow-500"></i></p>
              <p class="text-xl font-bold text-red-500 mb-4"><%= home.price %> per night</p>
            </div>
          </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>
