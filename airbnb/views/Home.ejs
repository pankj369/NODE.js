<%- include('partials/head') %>
  <body class="bg-gray-100">
    <%- include('partials/header') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
      <h2 class="text-5xl text-gray-800 font-bold text-center mb-6">Here are our registered Homes:</h2>
      <ul class="space-y-4">
        <% registerHomes.forEach(home => { %>
          <li class="p-4 bg-gray-50 border border-gray-300 rounded-lg shadow-md hover:bg-gray-100 transition duration-300">
            <h3 class="text-2xl font-semibold text-gray-700"><%= home.houseName %></h3>
          </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>
